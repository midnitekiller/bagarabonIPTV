<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.direct2guests.d2g_tv.Activities.ServicesSpaCarLists">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fnbbg"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="106dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/typeText"
            android:layout_alignParentTop="true"
            android:layout_marginStart="678dp"
            android:layout_marginTop="405dp"
            android:text="@string/cartinstruc"
            android:textAlignment="textEnd"
            android:textColor="#723C92"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/quatityIconTxt"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/SpaCarRL1"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="36dp"
            android:layout_toStartOf="@+id/CartButtonSC"
            android:textAlignment="textEnd"
            android:textColor="#723c92"
            android:translationZ="30dp" />

        <Button
            android:id="@+id/CartButtonSC"
            android:layout_width="79dp"
            android:layout_height="75dp"
            android:layout_alignBottom="@+id/SpaCarRL1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/cart_logo"
            android:textAlignment="textEnd" />

        <TextClock
            android:id="@+id/textClock5"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/gothambook"
            android:text="textClock"
            android:textAlignment="textStart"
            android:textColor="#723C92"
            android:textSize="36sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/guestNameTxtV5"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="649dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/gothambook"
            android:text="@string/indexGuestName"
            android:textAlignment="textStart"
            android:textColor="#723C92"
            android:textSize="18sp"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="144dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="723dp"
            android:layout_marginTop="449dp"
            android:src="@drawable/questlogo"
            tools:layout_editor_absoluteX="688dp"
            tools:layout_editor_absoluteY="410dp" />

        <RelativeLayout
            android:id="@+id/notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cartll"
            android:layout_toLeftOf="@id/cartll"
            android:visibility="gone">

            <TextView
                android:id="@+id/new_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/chat_message"
                android:layout_alignParentEnd="false"
                android:layout_marginEnd="5dp"
                android:background="@drawable/badge_circle"
                android:text="1"
                android:textSize="16sp"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/chat_message"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/message_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/typeText"
            android:layout_width="325dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="119dp"
            android:fontFamily="@font/gothambook"
            android:gravity="center_vertical"
            android:shadowColor="@color/background_gradient_start"
            android:shadowDx="-2"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="-7dp"
            android:layout_marginRight="-42dp"
            android:layout_toLeftOf="@+id/SpaCarRL1">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="224dp"
                android:layout_height="127dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="130dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="167dp"
                android:layout_marginBottom="212dp"
                android:src="@drawable/puso" />

            <Button
                android:id="@+id/HomeBtnSC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/BackButtonSC"
                android:layout_alignTop="@+id/BackButtonSC"
                android:layout_alignParentStart="true"
                android:layout_marginStart="46dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/home_logo"
                android:visibility="gone"
                tools:visibility="gone" />

            <Button
                android:id="@+id/BackButtonSC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="102dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/back_logo"
                android:visibility="gone"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/SCImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:layout_toRightOf="@+id/SCTitle"
                android:backgroundTint="#2f000000"
                android:scaleType="fitXY"
                android:src="@drawable/spa"
                android:visibility="gone" />

            <TextView
                android:id="@+id/SCTitle"
                android:layout_width="329dp"
                android:layout_height="56dp"
                android:fontFamily="@font/gothambook"
                android:shadowColor="@color/background_gradient_start"
                android:shadowDx="-2"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="Services Type"
                android:textColor="#fff"
                android:textSize="24sp"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/SpaCarRL1"
            android:layout_width="445dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/SCCartLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/cartTxt"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:background="#723C92"
                    android:fontFamily="@font/gothambook"
                    android:padding="9dp"
                    android:text="CART"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/CarSpaCartLists"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/confirmButton"
                    android:layout_below="@+id/cartTxt"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/confirmButton"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:background="#723C92"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:id="@+id/confirmOrderTxt"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:background="@drawable/confirm_button"
                        android:backgroundTint="@color/hometint"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/gothambook"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="CONFIRM ORDER"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/grandTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerVertical="false"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/confirmOrderTxt"
                        android:fontFamily="@font/gothambook"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="24sp" />

                </RelativeLayout>

            </RelativeLayout>

            <ListView
                android:id="@+id/SpaCarListview"
                android:layout_width="395dp"
                android:layout_height="353dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="95dp"
                android:choiceMode="singleChoice"
                android:divider="#fcbd2e"
                android:dividerHeight="1px"
                android:drawSelectorOnTop="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:listSelector="#80723C92"
                android:visibility="visible" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/cartll"
            android:layout_width="101dp"
            android:layout_height="73dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
