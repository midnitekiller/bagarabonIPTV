<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab"
    android:layout_width="400dp"
    android:layout_height="70dp"
    android:backgroundTint="@android:color/holo_green_light"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="77dp"
        android:layout_height="67dp"
        android:layout_centerVertical="true"
        android:src="@drawable/spa" />

    <RelativeLayout
        android:id="@+id/item_details"
        android:layout_width="209dp"
        android:layout_height="match_parent"
        android:layout_marginRight="-11dp"
        android:layout_toLeftOf="@+id/quantity_layout"
        android:layout_toRightOf="@+id/thumbnail"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/gothambook"
            android:textColor="#723C92"
            android:textColorHighlight="#723C92"
            android:textColorLink="#723C92"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/gothambook"
            android:textColor="#723C92"
            android:textColorHighlight="#723C92"
            android:textColorHint="#723C92"
            android:textColorLink="#723C92"
            android:textSize="11sp"
            android:visibility="gone"
            tools:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quantity_layout"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp">

        <TextView
            android:id="@+id/priceTxt"
            android:layout_width="104dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/gothambook"
            android:text="PHP 1000.00"
            android:textAlignment="textEnd"
            android:textColor="#723C92"
            android:textSize="18sp"
            android:visibility="visible" />
    </RelativeLayout>

    <!-- Artist Name -->

    <!-- Rightend Duration -->

    <!-- Rightend Arrow -->

</RelativeLayout>