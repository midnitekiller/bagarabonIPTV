<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartItem"
    android:layout_width="400dp"
    android:layout_height="90dp"
    android:background="#fff"
    android:padding="10dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerVertical="true"
        tools:visibility="gone" />

    <RelativeLayout
        android:id="@+id/item_details"
        android:layout_width="136dp"
        android:layout_height="72dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/quantity_layout"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/gothambook"
            android:text="Name"
            android:textColor="#636363"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Name"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gothambook"
            android:text="PHP 600.00"
            android:textColor="#393939"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quantity_layout"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/addButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/quantityText"
            android:background="@drawable/p"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="8dp"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/quantityText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/deductButton"
            android:fontFamily="@font/gothambook"
            android:gravity="center_vertical|center_horizontal"
            android:text="99 Hours"
            android:textColor="#000"
            android:textSize="13sp" />

        <Button
            android:id="@+id/deductButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/pp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="8dp"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ppp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
